generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique @db.VarChar(191)
  email        String   @unique @db.VarChar(191)
  passwordHash String   @db.VarChar(255)
  createdAt    DateTime @default(now())
  orders       Order[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String
  imageUrl    String
  price       Int         // Kuruş (cent) cinsinden: 1999 => 19,99 ₺
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())

  // İsteğe bağlı: sipariş ilişkileri varsa kalsın
  orderItems  OrderItem[]
}


model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique @db.VarChar(191)
  createdAt   DateTime    @default(now())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  totalAmount Int
  orderItems  OrderItem[]

  @@index([userId])
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  product         Product @relation(fields: [productId], references: [id])
  quantity        Int
  priceAtPurchase Int

  @@index([orderId])
  @@index([productId])
}
