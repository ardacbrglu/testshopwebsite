// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  pending
  confirmed
  canceled
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique @db.VarChar(191)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  imageUrl    String
  /// Kuruş (ör. 1999 => 19,99 ₺)
  price       Int
  currency    String   @default("TRY") @db.VarChar(8)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  orderItems OrderItem[]
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique @db.VarChar(191)
  status      OrderStatus @default(confirmed)
  createdAt   DateTime    @default(now())
  confirmedAt DateTime?
  caboRef     String?     @db.VarChar(191)
  currency    String      @default("TRY") @db.VarChar(8)
  totalAmount Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  items OrderItem[]

  @@index([userId, createdAt])
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String?
  product   Product? @relation(fields: [productId], references: [id])

  productName String
  productSlug String

  quantity            Int
  unitPriceAtPurchase Int // kuruş
  lineTotal           Int // kuruş

  @@index([orderId])
  @@index([productId])
  @@index([productSlug])
}
